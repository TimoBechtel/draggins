{
  "name": "draggins",
  "version": "2.0.1",
  "description": "Make things draggable on mobile or desktop.",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "unpkg": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "microbundle && npm run build:example",
    "build:example": "microbundle build -f es -o example/dist/index.js",
    "dev": "microbundle watch",
    "dev:example": "microbundle watch -f es -o example/dist/index.js",
    "prepare": "npm run build",
    "lint": "eslint src",
    "test": "npm run lint"
  },
  "files": [
    "src",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TimoBechtel/draggins.git"
  },
  "keywords": [
    "draggable",
    "drag",
    "web",
    "javascript"
  ],
  "author": "Timo Bechtel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TimoBechtel/draggins/issues"
  },
  "homepage": "https://github.com/TimoBechtel/draggins#readme",
  "devDependencies": {
    "@compactjs/uea": "^1.0.3",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "eslint": "^7.8.1",
    "microbundle": "^0.12.3",
    "semantic-release": "^17.1.1"
  }
}
