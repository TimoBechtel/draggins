{
  "name": "draggins",
  "version": "2.1.0",
  "description": "Make things draggable on mobile or desktop.",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "unpkg": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "microbundle && npm run build:example",
    "build:example": "microbundle build -f es -o example/dist/index.js",
    "dev": "microbundle watch",
    "dev:example": "microbundle watch -f es -o example/dist/index.js",
    "prepare": "npm run build"
  },
  "files": [
    "src",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TimoBechtel/draggins.git"
  },
  "keywords": [
    "draggable",
    "drag",
    "web",
    "javascript"
  ],
  "author": "Timo Bechtel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TimoBechtel/draggins/issues"
  },
  "homepage": "https://github.com/TimoBechtel/draggins#readme",
  "devDependencies": {
    "@compactjs/cap": "^1.1.0",
    "@compactjs/uea": "^1.1.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "microbundle": "^0.14.2",
    "semantic-release": "^19.0.3"
  }
}
